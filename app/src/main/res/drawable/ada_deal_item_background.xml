<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

     <!--填充-->
    <solid android:color="#FFFFFF" />

    <!-- 渐变 -->
    <gradient
        android:angle="90"
        android:centerColor="#d1d0d0"
        android:endColor="#e6e4e4"
        android:startColor="#bcbcbc" />


    <!-- 圆角 -->
    <corners
        android:radius="3dp"
        android:bottomLeftRadius="3dp"
        android:bottomRightRadius="3dp"/>

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/low_gray"/>

    <padding
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp" />



</shape>

